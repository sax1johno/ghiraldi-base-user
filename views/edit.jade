extends admin/layout

append content
    section
        append pageHeader
            .page-header
                h1 Editing user #{user.username}
        form.form-horizontal(method="post", action="/admin/user/#{user.id}")
            input(type="hidden", name="_method", value="put")        
            block form
                block fields
                    block username
                        .control-group
                            label.control-label(for='username') Username:
                            .controls
                                input#username(type="text", name="user[username]", value="#{user.username}");
                    block email
                        .control-group
                            label.control-label(for='email') Email:
                            .controls
                                input#email(type="text", name="user[email]", value="#{user.email}");
                block submitButton
                    .control-group
                        .controls
                            input.btn.btn-primary(type="submit", value="Update")    